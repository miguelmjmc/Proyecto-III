{% extends '@App/base/layout.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block main_title %}Perfil del Usuario{% endblock main_title %}

{% block main_breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i> Inicio</a></li>
    <li class="active"><a href="{{ path('user_profile') }}"><i class="fa fa-user-plus"></i> Perfil del Usuario</a></li>
{% endblock %}

{% block main_container %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Pefil del Usuario</h3>
            <button class="btn btn-primary float-right modal-trigger" data-action="{{ path('user_profile') }}" data-method="PUT">Editar</button>
        </div>
        <div class="box-body">
           <div class="row">
               <div class="col-md-6">
                   <div class="img-container">
                       <img class="img" src="{{ asset(form.vars.value.img|default('bundles/app/img/default.png')) }}">
                   </div>
               </div>
               <div class="col-md-6">
                   {{ form(form) }}
               </div>
           </div>
        </div>
    </div>
{% endblock %}
