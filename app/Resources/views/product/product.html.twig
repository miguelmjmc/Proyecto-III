{% extends '@App/base/layout.html.twig' %}

{% block main_title %}Productos{% endblock main_title %}

{% block main_breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i> Inicio</a></li>
    <li class="active"><a href="{{ path('product') }}"><i class="fa fa-dashboard"></i> Productos</a></li>
{% endblock %}

{% block main_container %}
    <div class="row">
        <div class="col-md-6">
            <div class="box collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-list-ul"></i> Listado Categorias</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <button class="btn btn-primary float-right modal-trigger btn-new" data-action="{{ path('category_modal') }}" data-method="POST">Nuevo</button>

                    <table class="table table-striped table-bordered table-hover datatable" style="width:100%" data-src="{{ path('category_list') }}"></table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-list-ul"></i> Listado de Marcas</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <button class="btn btn-primary float-right modal-trigger btn-new" data-action="{{ path('brand_modal') }}" data-method="POST">Nuevo</button>

                    <table class="table table-striped table-bordered table-hover datatable" style="width:100%" data-src="{{ path('brand_list') }}"></table>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-list-ul"></i> Listado de Clientes</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <button class="btn btn-primary float-right modal-trigger btn-new" data-action="{{ path('product_modal') }}" data-method="POST">Nuevo</button>

                    <table class="table table-striped table-bordered table-hover datatable" style="width:100%" data-src="{{ path('product_list') }}"></table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
